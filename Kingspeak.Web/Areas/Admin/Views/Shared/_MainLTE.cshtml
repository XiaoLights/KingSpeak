@{
    Kingspeak.Admin.Models.Tb_Admin_UserInfo UserInfo = (Kingspeak.Admin.Models.Tb_Admin_UserInfo)Session["UserInfo"];
    if (UserInfo == null) {
        UserInfo = new Kingspeak.Admin.Models.Tb_Admin_UserInfo();
    }
}
<!DOCTYPE html>
<html>
<head>
    <title>用户管理系统 @Page.Title</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/Content/AdminLTE/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/AdminLTE/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Content/AdminLTE/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/AdminLTE/dist/css/AdminLTE.min.css">
    <!--Switch控件-->
    <link href="~/Scripts/Plugins/bootstrap-switch/dist/css/bootstrap3/bootstrap-switch.min.css" rel="stylesheet" />

    <link href="~/Content/MyStyle.css" rel="stylesheet" />
    <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
      page. However, you can choose any other skin. Make sure you
      apply the skin class to the body tag so the changes take effect. -->
    @Styles.Render("~/bundles/CSS/Skin")
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    @RenderSection("Style", required: false)
</head>
<body class="hold-transition skin-blue sidebar-mini fixed">

    <!-- Main Header -->
    <header class="main-header">
        <!-- Logo -->
        <a href="#" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini"><b>A</b>LT</span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg"><b>KingsunVIP</b>用户管理系统</span>
        </a>
        <!-- Header Navbar -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                <span class="sr-only">Toggle navigation</span>
            </a>
            <!-- Navbar Right Menu -->
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <!-- User Account Menu -->
                    <li class="dropdown user user-menu">
                        <!-- Menu Toggle Button -->
                        <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
                            <!-- The user image in the navbar-->
                            <img src="~/Content/AdminLTE/dist/img/user2-160x160.jpg" class="user-image" alt="User Image">
                            <!-- hidden-xs hides the username on small devices so only the image appears. -->
                            <span class="hidden-xs">@UserInfo.TrueName</span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- The user image in the menu -->
                            <li class="user-header">
                                <img src="~/Content/AdminLTE/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                                <p>
                                    @*Alexander Pierce - Web Developer
                                        <small>Member since Nov. 2012</small>*@
                                </p>
                            </li>

                            <!-- Menu Footer-->
                            <li class="user-footer">
                                <div class="pull-left">
                                    <a href="javascript:;" id="btnprofile" class="btn btn-default btn-flat">个人配置</a>
                                </div>
                                <div class="pull-right">
                                    <a href="~/Admin/Login/Index" class="btn btn-default btn-flat">注销</a>
                                </div>
                            </li>
                        </ul>
                    </li>

                </ul>
            </div>
        </nav>
    </header>
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- Sidebar user panel (optional) -->
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="~/Content/AdminLTE/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">
                    <p>@UserInfo.TrueName</p>
                </div>
            </div>
            <!-- /.search form -->
            <!-- Sidebar Menu -->
            <ul class="sidebar-menu" data-widget="tree">
                <li class="header">我的菜单</li>
                <!-- Optionally, you can add icons to the links -->
                <li><a href="~/Admin/Home/Index"><i class="fa fa-home"></i> <span>首页</span></a></li>
                <li><a href="~/Admin/User/Index"><i class="fa fa-users"></i> <span>用户管理</span></a></li>
                <li><a href="~/Admin/Application/Index"><i class="fa fa-archive"></i> <span>接入应用管理</span></a></li>
                <li><a href="~/Admin/User/Administrator"><i class="fa fa-user"></i> <span>管理员管理</span></a></li>
                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-sitemap"></i> <span>门户站管理</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-home"></i>首页
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="~/Portal/HomeManager/Carousel"><i class="fa fa-picture-o"></i> 轮播图</a></li>
                                <li><a href="~/Portal/HomeManager/ManagerVideo"><i class="fa fa-video-camera"></i> 在线视频</a></li>
                                <li><a href="~/Portal/HomeManager/CourseInfo"><i class="fa fa-eye"></i> 课程信息</a></li>
                            </ul>
                        </li>
                        <li><a href="~/Portal/ForeignTeacher/TeacherManager"><i class="fa fa-user-circle-o"></i> 外教师资</a></li>
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-play-circle-o"></i>活动公告
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="~/Portal/Activity/CarouselManager"><i class="fa fa-picture-o"></i> 轮播图</a></li>
                                <li><a href="~/Portal/Activity/ActivityList"><i class="fa fa-eye"></i> 活动列表</a></li>
                            </ul>
                        </li>

                    </ul>
                </li>
            </ul>
            <!-- /.sidebar-menu -->
        </section>
        <!-- /.sidebar -->
    </aside>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

        @RenderBody()

    </div>
    <!-- /.content-wrapper -->
    <!-- Main Footer -->
    <footer class="main-footer">
        <!-- To the right -->
        <div class="pull-right hidden-xs">
            Anything you want
        </div>
        <!-- Default to the left -->
        <strong>Copyright &copy; 2016 <a href="#">Company</a>.</strong> All rights reserved.
     </footer>


    <div id="editadminInfo" style="display:none;">
        <form id="editadminInfoForm" style="margin-top:15px;">
            <input type="hidden" name="UserID" value="@UserInfo.UserID" />
            <div class="form-group" style="overflow:hidden;">
                <label for="txtappName" class="col-sm-2 control-label txtlabel">
                    管理员名称
                </label>
                <div class="col-sm-10">
                    <input type="text" readonly="readonly" name="UserName" class="form-control" placeholder="管理员名称" value="@UserInfo.UserName" />
                </div>
            </div>
            <div class="form-group" style="overflow:hidden;">
                <label class="col-sm-2 control-label txtlabel">
                    真实姓名
                </label>
                <div class="col-sm-10" style="overflow:hidden;">
                    <input type="text" name="TrueName" class="form-control" placeholder="管理员真实姓名" value="@UserInfo.TrueName" />
                </div>
            </div>
            <div class="form-group" style="overflow:hidden;">
                <label class="col-sm-2 control-label txtlabel">
                    密码
                </label>
                <div class="col-sm-10">
                    <input type="password" id="txtadminpwd" name="PassWord" class="form-control" placeholder="管理员密码" value="" />
                </div>
            </div>
            <div class="form-group" style="overflow:hidden;">
                <label class="col-sm-2 control-label txtlabel">
                    确认密码
                </label>
                <div class="col-sm-10">
                    <input type="password" id="txtadminpwdverify" name="VerifyPwd" class="form-control" placeholder="确认密码" value="" />
                </div>
            </div>
            @*<div class="form-group date" style="overflow:hidden;">
                    <label for="txtappName" class="col-sm-2 control-label txtlabel">
                        头像选择
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control pull-right" name="ExpirDate" id="datepicker">
                    </div>
                </div>*@
        </form>
    </div>


    <!-- ./wrapper -->
    <!-- REQUIRED JS SCRIPTS -->
    <!-- jQuery 3 -->
    <script src="~/Content/AdminLTE/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Content/AdminLTE/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- AdminLTE App -->
    @*<script src="~/Content/AdminLTE/dist/js/adminlte.min.js"></script>*@
    <script src="~/Content/AdminLTE/dist/js/adminlte.js"></script>
    <!-- layer.js -->
    <script src="~/Scripts/Plugins/layer/layer/layer.js"></script>
    <!--Switch控件-->
    <script src="~/Scripts/Plugins/bootstrap-switch/dist/js/bootstrap-switch.min.js"></script>

    <script src="~/Scripts/jquery.validate.js"></script>

    <script src="~/Scripts/Common.js"></script>
    @RenderSection("scripts", required: false)

    <script>
        $(function () {
            var url = window.location;
            var element = $('ul.sidebar-menu a').filter(function () {
                return this.href == url;
            }).parent().addClass('active');

            var treelist = $(element).parents('.treeview').addClass("active");

            $("#btnprofile").click(function () {
                $("#txtadminpwd").val('');
                $("#txtadminpwdverify").val('');
                layer.open({
                    title: '修改账户信息',
                    type: 1,
                    area: ['600px', '360px'],//大小设置
                    fixed: false, //不固定
                    btn: ['保存', '放弃'],
                    content: $('#editadminInfo'),
                    btn1: function () {
                        //按钮1的回掉（保存按钮)
                        $.post(Common.GetRightUrl("/Admin/User/SaveAdminUser"), $("#editadminInfoForm").serialize(), function (data) {
                            if (data.Success) {
                                layer.alert("保存成功", { time: 1000 });
                                layer.closeAll('page');
                            } else {
                                layer.alert(data.ErrorMsg);

                            }
                        })
                    }
                });
            })

            //while (true) {
            //    if (element.is('li')) {
            //        element = element.parent().addClass('in').parent();
            //    } else {
            //        break;
            //    }
            //}
        })
    </script>
</body>
</html>
